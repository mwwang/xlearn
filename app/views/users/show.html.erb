<% provide(:title, @user.firstname) %>

<div class="container">

<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= image_tag @user.avatar.url(:thumb), class: "myavatar" %>
        <%= @user.firstname + " " + @user.lastname %>
      </h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>

  <div class="span8">
    <%= render 'shared/follow_form' %>
    <% if @user.posts.any?%>
    <h3>Posts <%= @user.posts.count %></h3>
    	<ol class="posts">
    		<%= render @posts %>
    	</ol>
    	<%= will_paginate @posts %>
    <% end %>
  </div>
</div>