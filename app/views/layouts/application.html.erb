<!DOCTYPE html>
<html>
<head>
	<title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim' %>
</head>
<body>
	<%= render 'layouts/header' %>
	<div class="container">
		<% if notice %>
			<p class="notice"><%= notice %></p>
		<% end %>
		<% if alert %>
  		<p class="alert"><%= alert %></p>
  	<% end %>
  </div>
	<%= yield %>
	<%= render 'layouts/footer' %>
</body>
</html>
