<!-- Carousel -->
<div id="myCarousel" class="carousel slide">
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>
  <!-- Carousel items -->
  <div class="carousel-inner">
	  <div class="active item ad1">
	  	<%# image_tag "hero_BG.jpg" %>
	  	<!-- <img src="http://placehold.it/2000x720/990099/ffffff" alt="" /> -->
      <div class="carousel-caption">
      	<div class="container">
        	<p>Health and pregnancy</p>
      	</div>
      </div>
	  </div>
	  <div class="item ad2">
	  <!-- 	<img src="http://placehold.it/2000x720/cc9966/ffffff" alt="" /> -->
      <div class="carousel-caption">
      	<div class="container">
        	<p>Travel and experiences</p>
      </div>
      </div>
	  </div>
	  <div class="item ad3">
	  	<!-- <img src="http://placehold.it/2000x720" alt="" /> -->
      <div class="carousel-caption">
      	<div class="container">
        	<p>Tech and entrepreneurship</p>
      	</div>
      </div>
	  </div>
	</div>
<!-- Carousel nav -->
	<a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
	<a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
</div>


<div class="container">
	<aside class="carousel-text">
		<h1>Welcome to Bekweeth</h1>
		<h2>Start learning from <strong><%= @users.count %></strong> other people now.</h2>
		<div class="well well-small">
			<div class="hero-well">
				<select>
					<option selected disabled>What do you want to learn?</option>
					<option>Health and pregnancy</option>
					<option>Travel and exploration</option>
					<option>Tech and entrepreneurship</option>
					<option>Arts and creative</option>
				</select>
				<input type="text" placeholder="Where do you live?">
				<button class="btn btn-large btn-primary" type="button">Find</button>
			</div>
		</div>
	</aside>
</div>




