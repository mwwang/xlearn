<% provide(:title, 'Experiential Learning') %>

<div class="container">
	<div class="center hero-unit">
	  <h1>Welcome to Xlearn</h1>

	  <h2>
	    Some knowledge can't be acquired in a classroom. They get passed down.
	  </h2>

	  <% if not user_signed_in? %>
	  	<%= link_to "Sign up now!", new_user_registration_path, class: "btn btn-large btn-primary" %>
	  <% else %>
	  	<h3>Welcome, <%= current_user.firstname %>!</h3>
	  <% end %>
	</div>

	<% if user_signed_in? %>
		<div class="row">
			<aside class="span4">
				<section>
					<%= render 'shared/user_info' %>
				</section>
				<section>
					<%= render 'shared/stats' %>
				<section>
					<%= render 'shared/post_form' %>
				</section>
			</aside>
			<div class="span8">
				<h3>Post feed</h3>
				<%= render 'shared/feed' %>
			</div>
		</div>
	<% else %>
		<h3>NOT LOGGED IN</h3>
	<% end %>


<%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
<% if user_signed_in? %>
	<%= link_to "Profile", current_user %>
	<%= current_user.lastname %>
	<%= current_user.firstname %>
<% end %>
</div>